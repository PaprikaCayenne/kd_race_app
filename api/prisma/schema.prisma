generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int             @id @default(autoincrement())
  first_name    String          @map("first_name")  // Match the column in the database
  last_name     String          @map("last_name")    // Match the column in the database
  nickname      String?         @map("nickname")
  created_at    DateTime        @default(now())  @map("created_at")  // Match the column in the database
  registrations Registration[]  @map("registrations")

  @@map("users") // ✅ maps to existing `users` table
}

model Horse {
  id            Int             @id @default(autoincrement())
  name          String
  color         String
  registrations Registration[]  @map("registrations")
  results       Result[]        @map("results")

  @@map("horses") // ✅ maps to existing `horses` table
}

model Registration {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [user_id], references: [id])
  user_id    Int
  horse      Horse    @relation(fields: [horse_id], references: [id])
  horse_id   Int
  created_at DateTime @default(now()) @map("created_at")  // Match the column in the database

  @@map("registrations") // ✅ maps to existing `registrations` table
}

model Race {
  id         Int     @id @default(autoincrement())
  started_at DateTime? @map("started_at")  // Match the column in the database
  ended_at   DateTime? @map("ended_at")    // Match the column in the database
  results    Result[]  @map("results")

  @@map("races") // ✅ maps to existing `races` table
}

model Result {
  id        Int    @id @default(autoincrement())
  race      Race   @relation(fields: [race_id], references: [id])
  race_id   Int
  horse     Horse  @relation(fields: [horse_id], references: [id])
  horse_id  Int
  position  Int
  time_ms   Int

  @@map("results") // ✅ maps to existing `results` table
}
